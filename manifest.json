{
  "manifest_version": 2,

  "name": "Black Frauday",
  "description": "This extension avoids untrusted shopping sites.",
  "version": "1.0",
  
  "permissions": [
	"tabs", "bookmarks", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"
  ],
  
  "background": {
    "scripts": ["jquery-1.11.1.min.js", "URI.js", "blackfrauday.js"]
  },
  
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
		  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "blackfrauday.html"
  }
}